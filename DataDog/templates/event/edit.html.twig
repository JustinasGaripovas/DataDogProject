{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}


    {{ form_start(form) }}

    <div style="width:50%;padding: 3em;" class="container-fluid">

    {{ form_start(form) }}

    {{ form_errors(form) }}
    {% for child in form if not child.rendered %}
        <div class="form-group row">
            {{ form_label(child, null, { 'label_attr': {'class': 'col-sm-2 col-form-label' } }) }}
            <div class="col-sm-10">
                {{ form_widget(child,{ 'attr': {'class': 'form-control' } }) }}
            </div>
        </div>
    {% endfor %}



    <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    {{ form_end(form) }}



{% endblock %}
